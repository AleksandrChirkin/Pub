extends layout

block content
  h1 Удаление заказа № #{order._id}
  p На имя #{order.name}

  div(style='margin-left:20px;margin-top:20px')

  h4 Столики

  dl
    each table in order.tables
      dt
        a(href=table.url) Столик №#{table.number}
      dd
        if table.name
          p Название: #{table.name}

  h4 Время начала заказа: #{order.normal_time}
  hr
  h4 Продолжительность: #{order.duration_in_hours}
  
  p Вы точно хотите отменить этот заказ?

  form(method='POST' action='')
    div.form-group
      input#orderid.form-control(type='hidden',name='orderid', required='true', value=order._id )

    button.btn.btn-primary(type='submit') Удалить
